<div id="viewing-album-background">
  <% x = 1 %>
  <% y = x + 5 %>

  <div class="text-end viewing-album-season">
    <h3><%= Album.first.season %></h3>
  </div>
  <div class="text-center viewing-album-team">
    <!-- <h2><%= Card.first.team%></h2> -->
    <!-- <h2><%= Album.first.cards.first.team%></h2> -->
    <h2><%= Album.first.cards.find(x).team%></h2>

  </div>

  <div class="album-cards-container">
    <div class="album-cards">
      <%#  Album.first.cards.where(id: 1..6).each do |player| %>
      <%# x = 1, y =6 %>
      <%# x += 6, y += 6 - x and y increment up by 6 as switch between pages%>
      <%# x -= 6, y -= 6 - when go back a page %>
        <%# could also keep a counter that increments by 1 and then multiply that by the = 6 %>
      <%# instigate the increment when a button is pushed - JS? %>
      <%# take the x upto the Album.first.cards.find(x).team %>
      <%# add restrcitions - if x == 1, dont allow increment lower - same with y == 180 %>
      <%  Album.first.cards.where(id: x..y).each do |player| %>
      <%#  Album.first.cards.first(6).each do |player| %>
        <div class="card">
          <% if player.album_cards.first.counter == 0 %>
            <%# <img src="https://image.cnbcfm.com/api/v1/image/106498863-1587478459689michaeljordan.jpg?v=1587478546" /> %>
            <div class="card-image-hidden">
            </div>
          <% else %>
            <div class="card-image-shown">
            </div>
          <% end %>
          <div class="card-basic-info">
            <div>
              <h2><%= player.name %></h2>
              <p><%= player.position %></p>
            </div>
            <% if player.album_cards.first.counter > 1 %>
              <h3 class="card-count"><%= player.album_cards.first.counter %></h3>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="viewing-album-button">
    <%= link_to "Add Stickers", "albums/#{@album.id}/quizzes/#{rand(1..3)}" %>
  </div>

  <%# want: onClick(up)=> x += 6 & onClick(down)=> x -= 6 | retriction on value of x, disbale down if x == 1 and disble up if y == 180%>
  <div class="text-center">
    <button type="button" class="btn btn-primary" id="up">Up</button>
    <button type="button" class="btn btn-success" id="down">Down</button>
  </div>

</div>
